

shader Deferred {
	
	flags basic_deferred;

	pass GBuffer {
	
		cbuffer ObjectProperties;

		texture_state {
			sampler linear_sampler {
				min_filter linear_mip_linear;
				mag_filter linear;
				address_u clamp;
				address_v clamp;
			}
			
			unit linear_sampler diffuseMap ui:Maps.DiffuseMap;
			unit linear_sampler specularAndGlossMap ui:Maps.SpecularAndGlossMap;
			unit linear_sampler normalMap ui:Maps.NormalMap;
		}

		depth_stencil_state {
			depth_state true true lessEq;
			stencil_test false;
		}
		
		blend_state {
			blend false;
		}
		
		raster_state {
			raster solid back true;
			scissor false;
			anti_aliasing false false;
		}
		

		program {
			option HAS_DIFFUSE_MAP ui:Options.HasDiffuseMap "desc:Apply diffuse map.";
			option HAS_NORMAL_MAP ui:Options.HasNormalMap "desc:Apply normal map.";
			option HAS_SPECULAR_AND_GLOSS_MAP ui:Options.HasSpecularAndGloss "desc:Apply specular and gloss map.";
			define HAS_NORMAL;
			vertex_program PreConfig Common PostConfig Deferred;
			fragment_program PreConfig Deferred;
		}
	}
}
