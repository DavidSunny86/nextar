
shader DebugQuad {

	flags debug;
	pass Main {
	
		cbuffer DebugTransforms;
		
		depth_stencil_state {
			depth_state true true lessEq;
			stencil_test false;
		}
		
		blend_state {
			blend false;
		}
		
		raster_state {
			raster solid back true;
			scissor false;
			anti_aliasing false false;
		}
		
		program {
			define HAS_2DVERT;
			vertex_program Common Quad;
			fragment_program DebugQuad;
		}

	}
}
