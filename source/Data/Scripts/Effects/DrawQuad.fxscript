
shader DrawQuad {

	tags compositor;
	pass Main {
   		
		import-cbuffer Quad;

		texture-state {
			sampler s0 nearest-repeat;
			unit _sDiffuseMap s0 (activate = "Maps.TextureMap", context = object);
		}

		depth-stencil-state disable;
		blend-state disable;
		raster-state default;

		program {
			define "Maps.TextureMap" HAS_DIFFUSE_MAP HAS_TEXCOORD0_CHANNEL;
			define always HAS_2DVERT_CHANNEL;
			vertex-program Quad;
			fragment-program CopyMap;
		}
	}
}
