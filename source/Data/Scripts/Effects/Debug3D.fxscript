
shader Debug3D {

	tags debug;
	pass Main {
	
		cbuffer DebugTransforms;
		
		depth-stencil-state {
			depth-state test-and-write;
			stencil-state disable;
		}
		
		blend-state {
			target alpha-blending;
         // advanced blending would be
         // target advanced source-alpha inv-source-alpha add;
         // alpha-to-coverage [true/false];
		}
		
		raster-state default;
		
		program {
			define HAS_COLOR_CHANNEL;
			vertex-program Debug3D;
			fragment-program Debug3D;
		}
	}
}
